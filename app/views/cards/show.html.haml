=render "layouts/toppage-header"

.credit-pay
  =render "/layouts/sidebar"
  .confirm__contents__payment
    %h1.confirm__contents__payment__title 支払い方法
    .confirm__contents__payment__creditcard
      .confirm__contents__payment__creditcard__left
        .confirm__contents__payment__creditcard__left__title
        クレジットカード一覧
        .confirm__contents__payment__creditcard__left__icon
          %i.fab.fa-cc-jcb
        .confirm__contents__payment__creditcard__left__number
          = "**** **** **** " + @default_card_information.last4
        .confirm__contents__payment__creditcard__left__limit
          - exp_month = @default_card_information.exp_month.to_s
          - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
          有効期限
          = exp_month + " / " + exp_year
      .confirm__contents__payment__creditcard__right
        =link_to "削除する", "#", method: :delete, class: :"right-link"
    .pay-info
      = link_to "#", class: :"credit-payment-next-page" do
        支払い方法について
        %span.fas.fa-chevron-right

=render "layouts/toppage-footer"