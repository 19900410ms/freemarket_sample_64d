  </div>
  <div class="itemshow__low">
    <div class="itemshow__low__box">
      <%= image_tag "sample.jpg", class: :"itemshow__low__box__image" %>
      <h1 class="itemshow__low__box__desc">商品名<h1>
        <div class="itemshow__low__box__desc__price">¥1,700</div>
        <div class="itemshow__low__box__desc__like">いいね</div>
      <div>
    </div>
  </div>
<div>

<nav class="items-show-footer">
  <ul class="items-show-footer__link">
    <li><%= link_to "メリカリ", "#", class: :"items-show-footer__link__left" %></li>
    <li><%= link_to "ブランド", "#", class: :"items-show-footer__link__right" %></li>
  </ul>   
</nav>