
%footer.footer
  .footer-lists
    .footer-lists-cell
      %h2.footer-lists-cell-head メルカリについて
      %ul.footer-lists-cell-texts
        %li.footer-lists-cell-texts-1
          = link_to "会社概要（運営会社)","#", class: :"t"
        %li.footer-lists-cell-texts-1
          = link_to "採用情報","#", class: :"t"
        %li.footer-lists-cell-texts-1
          = link_to "プレスリリース","#", class: :"t"
        %li.footer-lists-cell-texts-1
          = link_to "公式ブログ","#", class: :"t"
        %li.footer-lists-cell-texts-1
          = link_to "メルカリロゴ利用ガイドライン","#", class: :"t"
      .footer-lists-cell-logos
        = link_to "https://twitter.com/mercari_jp", class: :"footer-lists-cell-logos-twitter", target: :"_blank" do
          %i.fab.fa-twitter
          = link_to "https://www.facebook.com/mercarijp", class: :"footer-lists-cell-logos-facebook", target: :"_blank" do
            %i.fab.fa-facebook-square
    .footer-lists-cell
      %h2.footer-lists-cell-head ヘルプ＆ガイド
      %ul.footer-lists-cell-texts
        %li.footer-lists-cell-texts-1
          = link_to "らくらくメルカリ便","#", class: :"t"
        %li.footer-lists-cell-texts-1
          = link_to "ゆうゆうメルカリ便","#", class: :"t"
        %li.footer-lists-cell-texts-1
          = link_to "大型メルカリ便","#", class: :"t"
        %li.footer-lists-cell-texts-1
          = link_to "車体取引ガイド","#", class: :"t"
        %li.footer-lists-cell-texts-1
          = link_to "メルカリあんしん・あんぜん宣言！","#", class: :"t"
        %li.footer-lists-cell-texts-1
          = link_to "偽ブランド品撲滅への取り組み","#", class: :"t"
        %li.footer-lists-cell-texts-1
          = link_to "偽メルカリボックス","#", class: :"t"
    .footer-lists-full-width
      %h2.footer-lists-full-width-head プライバシーと利用規約
      .footer-lists-full-width-boxes
        .footer-lists-full-width-boxes-inner
          %ul.footer-lists-cell-texts
            %li.footer-lists-cell-texts-1
              = link_to "プライバシーポリシー","#", class: :"t"
            %li.footer-lists-cell-texts-1
              = link_to "メルカリ利用規約","#", class: :"t"
            %li.footer-lists-cell-texts-1
              = link_to "あんしんスマホサポート制度に関する利用特約","#", class: :"t"
            %li.footer-lists-cell-texts-1
              = link_to "コンプライアンスポリシー","#", class: :"t"
        .footer-lists-full-width-boxes-inner
          %ul.footer-lists-cell-texts
            %li.footer-lists-cell-texts-1
              = link_to "個人データの安全管理に係る基本方針","#", class: :"t"
            %li.footer-lists-cell-texts-1
              = link_to "特定商取引に関する表記","#", class: :"t"
            %li.footer-lists-cell-texts-1
              = link_to "資金決済法に基づく表示","#", class: :"t"
            %li.footer-lists-cell-texts-1
              = link_to "法令順守と犯罪抑止のために","#", class: :"t"
    .footer-lists-footer-lang
      %h2.footer-lists-footer-lang-head 国
      %ul.footer-lists-cell-texts
        %li.footer-lists-cell-texts-1
          = link_to "日本","#", class: :"t"
        %li.footer-lists-cell-texts-1
          = link_to "United States","#", class: :"t"
  .footer-bottom-block
    .footer-bottom-logo
      =image_tag "fmarket_logo_white.svg", height:"40px", width:"inherit", id:"index-footer-logo"
    .footer-bottom-text 
      ©Fmarket,Inc
