<%= render  partial: "signup.header"%>
<div class="signup4__contents">
  <div class="signup4__contents__heading">
    支払い方法
  </div>
  <div class="signup4__contents__main">
    <%= form_with(model: @user, url: signup_index_path, method: :post, local: true ) do |form| %>
      <%= form.fields_for :payments do |payment_form|%>
        <div class="signup4__contents__main__form1">
          <div class="signup4__contents__main__form1__heading">
            <p>カード番号</p>
            <p class="essential_icon">必須</p>
          </div>
          <%= payment_form.text_field :card_number, placeholder: "半角数字のみ", class: "signup4__contents__main__form1__form" %>
          <div class="signup4__contents__main__form1__icons">
            <i class="fab fa-cc-visa"></i>
            <i class="fab fa-cc-mastercard"></i>
            <i class="fab fa-cc-jcb"></i>
            <i class="fab fa-cc-amex"></i>
            <i class="fab fa-cc-diners-club"></i>
            <i class="fab fa-cc-discover"></i>
          </div>
        </div>

        <div class="signup4__contents__main__form2">
          <div class="signup4__contents__main__form1__heading">
            <p>有効期限</p>
            <p class="essential_icon">必須</p>
          </div>
          <div class="signup4__contents__main__form2__form">
            <label class="signup4__contents__main__form2__form__select">
              <%= payment_form.select :expire_month, ["01","02","03","04","05","06","07","08","09","10","11","12"]%>
            </label>
            <p class="signup4__contents__main__form2__form__date">月</p>
            <label class="signup4__contents__main__form2__form__select">
              <%= payment_form.select :expire_year, ["19","20","21","22","23","24"] ,{} %>
            </label>
            <p class="signup4__contents__main__form2__form__date">年</p>
          </div>
        </div>

        <div class="signup4__contents__main__form3">
          <div class="signup4__contents__main__form1__heading">
            <p>セキュリティコード</p>
            <p class = "essential_icon">必須</p>
          </div>
          <%= payment_form.text_field :security_code, placeholder: "カード背面4桁もしくは3桁の番号", class: "signup4__contents__main__form3__form" %>
          <div class="signup4__contents__main__form3__link">
            <a href="#", class="signup4__contents__main__form3__link__text">
              <i class="fas fa-question-circle"></i>
              カード裏面の番号とは?
            </a>
          </div>
        </div>
        <%end%>
      <div class="signup4__contents__main__submit">
        <label>
          <%= form.submit style: "display: none" %>
          <p class="signup4__contents__main__submit__btn">次へ進む</p>
        </label>
      </div>
    <% end %>
  </div>
</div>
<%= render  partial: "signup.footer"%>
