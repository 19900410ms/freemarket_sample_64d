= render partial: "layouts/toppage-header"
.search-main
  .search-main__contensts
    .search-main__contensts__left    
      .search-main__contensts__left__said-bar
        =search_form_for(@q, url: {controller: 'items', action: 'search' }) do |f|
          .search-main__contensts__left__said-bar__word
          あいまい
          =f.text_field :name_cont, value: @keyword
          .search-main__contensts__left__said-bar__min-price
          下限価格
          =f.number_field :price_gteq
          .search-main__contensts__left__said-bar__max-price
          上限最高
          =f.number_field :price_lteq
          =f.submit
      

    .search-main__contensts__right
      .search-main__contensts__right__index
        .search-main__contensts__right__index__title
          = @keyword + "の検索結果"
        = render partial: "items/item_index"

= render partial: "layouts/toppage-footer"